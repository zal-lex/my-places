<% unless current_user == @user %>
  <div id="follow_form">
    <% if current_user.following?(@user) %>
  	  <%= form_with(model: current_user.active_friendships.find_by(friend_id: @user.id), html: { method: :delete }, local: true) do |f| %>
        <%= f.submit "Unfriend", class: "btn btn-outline-light btn-sm" %>
      <% end %>
    <% else %>
  	  <%= form_with(model: current_user.active_friendships.build, local: true) do |f| %>
        <div><%= hidden_field_tag :friend_id, @user.id %></div>
        <%= f.submit "Add friend", class: "btn btn-outline-light btn-sm" %>
      <% end %>
    <% end %>
  </div>
<% end %>
